pipeline {
    agent any

    stages {
        stage('Clone Source') {
            steps {
                git 'https://github.com/TrongNghiaFL1/flask-cicd-demo.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest test_app.py
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-cicd-demo .'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                    docker stop flask-container || true
                    docker rm flask-container || true
                    docker run -d --name flask-container -p 5000:5000 flask-cicd-demo
                '''
            }
        }
    }
}
